class LaPetiteMaisonDansLaPrairieItem(Item):
    """an OOP representation of a vector
    a composite of several tk.Canvas items that can be manipulated as one
    """

    # at means anchor = lower left point
    # body: rectangle at (-1, -1) of width=2 and height=2
    # roof: triangle at (-1, 1) of horizontal base=2 and height=0.5
    # door: rectangle at (0, -1) of width=0.5 and height=1
    #     door_knob: point in rectangle at 2/5th of height and 1/10th of right edge
    # window: rectangle at (-0.8, -0.2) of width=.6 and height=.8
    #     left_pane:  rectangle at (-0.8, -0.2) of width=.3 and height=.8
    #     right_pane: rectangle at (-0.8, -0.2) of width=.3 and height=.8

    def __init__(self, canvas, anchor):  # here coords is anchor point

        super().__init__(canvas, (self.tail, self.tip))
        self.tags.append(self.canvas.create_line(*self.coords, fill='red', width=2, arrow='last'))
